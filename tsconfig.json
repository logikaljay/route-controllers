{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "lib", "jest.config.js"],
  "lib": ["es2015"]
}
